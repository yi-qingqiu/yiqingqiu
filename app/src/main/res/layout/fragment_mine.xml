<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:background="@color/background_color"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <widget.wateranim.WaterScreenView
        android:id="@+id/iv_water_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x450"
        android:background="@drawable/water_scene_background"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_head"
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/x160"
        android:src="@drawable/iv_user_head"
        android:layout_marginTop="@dimen/x100"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_marginTop="@dimen/x30"
        android:layout_below="@+id/iv_user_head"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/text_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="易清秋"/>
    <TextView
        android:padding="@dimen/x5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x50"
        android:textSize="16sp"
        android:layout_marginRight="@dimen/x10"
        android:text="编辑"/>
    <LinearLayout
        android:layout_below="@+id/iv_water_bg"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x500"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_helper"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="账号设置"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_right_forward"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dfdfdd"/>
        <RelativeLayout
            android:id="@+id/rl_about"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="关注.粉丝"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_right_forward"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/x30"
            android:background="@color/white"
            android:id="@+id/rl_cache_clear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="缓存清理"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_cache"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120kb"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_right_forward"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dfdfdd"/>
        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/rl_system_news"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="版本更新"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:src="@drawable/ic_right_forward"/>

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_image"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dfdfdd"/>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="关于"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_right_forward"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginBottom="@dimen/x5"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/x100"
        >

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="退出登录"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>